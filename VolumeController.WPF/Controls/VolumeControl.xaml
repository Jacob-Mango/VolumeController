<UserControl x:Class="VolumeController.WPF.Controls.VolumeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VolumeController.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="300" Width="200" MinWidth="200" MaxWidth="200" Height="260" MinHeight="260">

	<Grid MaxWidth="200" Width="200" Height="260" MinWidth="20">
		<Slider x:Name="ApplicationSlider" HorizontalAlignment="Left" Width="20" Orientation="Vertical" Maximum="1000" LargeChange="0" TickFrequency="100" SmallChange="0"/>
		<TextBlock x:Name="ApplicationName" HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="20"/>
		<CheckBox Content="Muted" HorizontalAlignment="Left" Margin="25,42,0,0" VerticalAlignment="Top"/>
		<Grid x:Name="SpecialControls" HorizontalAlignment="Left" Height="198" Margin="20,62,0,0" VerticalAlignment="Top" Width="180"/>
	</Grid>
</UserControl>
